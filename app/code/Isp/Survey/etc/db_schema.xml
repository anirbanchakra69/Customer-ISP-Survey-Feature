<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote" resource="sales" engine="innodb" comment="Sales Order">
        <column xsi:type="varchar" name="isp" nullable="true" length="255" comment="ISP"/>
		<column xsi:type="int" name="is_satisfied" padding="10" unsigned="true" nullable="false" comment="Is Satisfied"/>
    </table>
	
	<table name="sales_order" resource="sales" engine="innodb" comment="Sales Order">
		<column xsi:type="varchar" name="isp" nullable="true" length="255" comment="ISP"/>
        <column xsi:type="int" name="is_satisfied" padding="10" unsigned="true" nullable="false" comment="Is Satisfied"/>
    </table>
</schema>